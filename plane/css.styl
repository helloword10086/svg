$bg_color = #ffd200
*
  margin 0
  padding 0
html,body
  width 100%
  height 100%
@keyframes rotating 
   0%
     transform rotateZ(90deg)
   100%
    transform rotateZ(180deg)
@keyframes undate 
  0%,100%
     transform translate3d(15px,13px, 0)
  50%
     transform translate3d(30px,17px,0)

.plane-page
  width 100%
  height 100%
  background-color $bg_color
  position relative
  .plane-wrapper
    position absolute
    left 20%
    top 40%
    animation undate 8s linear infinite alternate
    .plane
      width 100%
    .rotate-container
      position absolute
      top 51.7003%
      left 13.1%
      display inline-block
      width 27.424%
      height 14.447%
      transform-origin center center
      animation rotating .2s linear infinite reverse
      .propeller
        width 100%
        transform rotateY(-28deg)
        

    